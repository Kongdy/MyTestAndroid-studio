<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- nofocused -->
    <!-- unselected unpressed unfoucused -->
    <item android:state_focused="false"
        android:state_pressed="false" android:state_selected="false"
        android:drawable="@drawable/custom_tab_indicator_unselected">
    </item>
    <!-- selected unpressed unfoucused -->
    <item android:state_focused="false"
        android:state_pressed="false"
        android:state_selected="true"
        android:drawable="@drawable/custom_tab_indicator_selected">
    </item>


    <!-- focused -->
    <item android:state_focused="true"
        android:state_pressed="false"
        android:state_selected="false"
        android:drawable="@drawable/custom_tab_indicator_unselected_focused">
    </item>
    <item android:state_focused="true"
        android:state_pressed="false"
        android:state_selected="true"
        android:drawable="@drawable/custom_tab_indicator_selected_focused">
    </item>


    <!-- pressed nofocused -->
    <item android:state_focused="false"
        android:state_pressed="true"
        android:state_selected="false"
        android:drawable="@drawable/custom_tab_indicator_unselected_pressed"></item>
    <item android:state_focused="false"
        android:state_pressed="true"
        android:state_selected="true"
        android:drawable="@drawable/custom_tab_indicator_selected_pressed">
    </item>

    <!-- pressed focused -->
    <item android:state_focused="true"
        android:state_pressed="true"
        android:state_selected="false"
        android:drawable="@drawable/custom_tab_indicator_unselected_pressed">
    </item>
    <item android:state_focused="true"
        android:state_pressed="true"
        android:state_enabled="true"
        android:drawable="@drawable/custom_tab_indicator_selected_pressed">
    </item>


</selector>