<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="mToolBarTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="android:titleTextStyle">@style/mToolBarTextStyle</item>
    </style>

    <!-- Base application theme. 沉浸式title-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
       <!-- <item name="android:actionBarStyle">@style/MyActionBar</item> -->
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="tabWithIconStyle">@style/customTabWithIconStyle</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Title</item>
        <!-- 开启透标题栏 ,注意API，这里最低支持API19，即android 4.4-->
        <!--<item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>-->
    </style>

    <style name="customTabWithIconStyle" parent="@style/Widget.TabPageIndicator">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/indicator_default_bg_selector</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:divider">@drawable/custom_tab_indicator_divider</item>
        <item name="android:showDividers">none</item>
        <item name="android:dividerPadding">5dip</item>
        <item name="android:typeface">monospace</item>
    </style>


</resources>
